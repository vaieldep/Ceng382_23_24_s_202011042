@page
@model LabApp.Pages.Rooms.WeeklyScheduleModel
@{
    ViewData["Title"] = "Weekly Schedule";
}
<div style="margin: 20px; background-color: rgba(255, 255, 255, 0.5); padding: 10px;">
<h1>Weekly Schedule</h1>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<form method="post">
    <div class="form-group">
        <label for="room">Room</label>
        <select id="room" asp-for="NewReservation.RoomId" class="form-control">
            @foreach (var room in Model.Rooms)
            {
                <option value="@room.Id">@room.RoomName (@room.Capacity)</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label for="day">Day</label>
        <select id="day" asp-for="NewReservation.Date" class="form-control">
            <option value="0">Sunday</option>
            <option value="1">Monday</option>
            <option value="2">Tuesday</option>
            <option value="3">Wednesday</option>
            <option value="4">Thursday</option>
            <option value="5">Friday</option>
            <option value="6">Saturday</option>
        </select>
    </div>
    <div class="form-group">
        <label for="time">Time</label>
        <select id="time" asp-for="NewReservation.Time" class="form-control">
            @for (int i = 9; i <= 17; i++)
            {
                <option value="@i">@i:00</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Make Reservation</button>
</form>

<h2>Current Reservations</h2>

<table class="table">
    <thead>
        <tr>
            <th>Room</th>
            <th>Day</th>
            <th>Start Time</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var reservation in Model.Reservations)
        {
            <tr>
                <td>@Model.Rooms.FirstOrDefault(r => r.Id == reservation.RoomId)?.RoomName</td>
                <td>@((DayOfWeek)reservation.Date)</td>
                <td>@reservation.Time:00</td>
                <td>
                    <form method="post" asp-page-handler="Delete">
                        <input type="hidden" name="id" value="@reservation.Id" />
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>