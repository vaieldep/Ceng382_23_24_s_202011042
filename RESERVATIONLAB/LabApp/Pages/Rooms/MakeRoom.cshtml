@page
@model LabApp.Pages.Rooms.MakeModel
@{
    ViewData["Title"] = "Create Room";
}
<h2>Create Room</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["SuccessMessage"]
    </div>
}

<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Room.RoomName" class="control-label"></label>
        <input asp-for="Room.RoomName" class="form-control" />
        <span asp-validation-for="Room.RoomName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Room.Capacity" class="control-label"></label>
        <input asp-for="Room.Capacity" class="form-control" />
        <span asp-validation-for="Room.Capacity" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Room.UserId" class="control-label"></label>
        <input asp-for="Room.UserId" class="form-control" />
        <span asp-validation-for="Room.UserId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Room.StartDate" class="control-label"></label>
        <input asp-for="Room.StartDate" class="form-control" />
        <span asp-validation-for="Room.StartDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Room.EndDate" class="control-label"></label>
        <input asp-for="Room.EndDate" class="form-control" />
        <span asp-validation-for="Room.EndDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<table class="table mt-5">
    <thead>
        <tr>
            <th scope="col">Room Name</th>
            <th scope="col">Capacity</th>
            <th scope="col">User ID</th>
            <th scope="col">Start Date</th>
            <th scope="col">End Date</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var room in Model.Rooms)
    {
        <tr>
            <td>@room.RoomName</td>
            <td>@room.Capacity</td>
            <td>@room.UserId</td>
            <td>@room.StartDate</td>
            <td>@room.EndDate</td>
            <td>
                <form method="post" asp-page-handler="Delete" asp-route-id="@room.Id">
                    <button class="btn btn-danger">Delete</button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>
